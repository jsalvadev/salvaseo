---
// No props needed - static separator
---

<div class='relative isolate bg-gradient-to-b from-petrol-50/30 via-white to-petrol-50/30'>
  <svg
    aria-hidden='true'
    class='absolute inset-0 -z-10 size-full'>
    <defs>
      <pattern
        id='textured-separator-pattern'
        width='48'
        height='48'
        patternUnits='userSpaceOnUse'>
        <!-- Amber dot (larger) -->
        <circle
          cx='12'
          cy='12'
          r='2.5'
          fill='currentColor'
          class='text-amber-600/40'
        ></circle>
        <!-- Petrol dot (medium) -->
        <circle
          cx='36'
          cy='36'
          r='1.8'
          fill='currentColor'
          class='text-petrol-600/35'
        ></circle>
        <!-- Additional amber dot (smaller) -->
        <circle
          cx='36'
          cy='12'
          r='1.5'
          fill='currentColor'
          class='text-amber-600/30'
        ></circle>
        <!-- Additional petrol dot (smaller) -->
        <circle
          cx='12'
          cy='36'
          r='1.3'
          fill='currentColor'
          class='text-petrol-600/25'
        ></circle>
      </pattern>
    </defs>
    <rect
      width='100%'
      height='100%'
      fill='url(#textured-separator-pattern)'
    ></rect>
  </svg>
  <div class='h-20 sm:h-24'></div>
</div>
