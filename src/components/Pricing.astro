---
import { BadgeCheck, CalendarClock, Layers3, Target } from '@lucide/astro'
import Upheading from './Upheading.astro'

interface PricingFeature {
  title: string
  description: string
}

interface PricingBottomItem {
  title: string
  description: string
}

interface Props {
  upheading: string
  heading: string
  intro: string
  costContext: string
  features: PricingFeature[]
  subheading: string
  subtext: string
  quote: string
  quoteAuthor: string
  bottomHeading: string
  bottomItems: PricingBottomItem[]
  ctaText: string
  ctaHref: string
}

const {
  upheading,
  heading,
  intro,
  costContext,
  features,
  subheading,
  subtext,
  quote,
  quoteAuthor,
  bottomHeading,
  bottomItems,
  ctaText,
  ctaHref,
} = Astro.props
---

<div class='bg-white px-6 py-32 lg:px-8'>
  <div class='mx-auto max-w-3xl text-base/7 text-gray-700'>
    <Upheading as='h2' text={upheading} />
    <p
      class='mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl'>
      {heading}
    </p>
    <p class='mt-6 text-xl/8'>
      <Fragment set:html={intro} />
    </p>

    <div class='mt-10 max-w-2xl text-gray-600'>
      <p>
        <Fragment set:html={costContext} />
      </p>

      <ul role='list' class='mt-8 max-w-xl space-y-8 text-gray-600'>
        {features.map((feature) => (
          <li class='flex gap-x-3'>
            <svg
              viewBox='0 0 20 20'
              fill='currentColor'
              data-slot='icon'
              aria-hidden='true'
              class='mt-1 size-5 flex-none text-sky-600'>
              <path
                d='M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z'
                clip-rule='evenodd'
                fill-rule='evenodd'
              />
            </svg>
            <span>
              <strong class='font-semibold text-gray-900'>{feature.title}</strong>
              {' '}{feature.description}
            </span>
          </li>
        ))}
      </ul>

      <h3
        class='mt-16 text-3xl font-semibold tracking-tight text-pretty text-gray-900'>
        {subheading}
      </h3>
      <p class='mt-6'>
        <Fragment set:html={subtext} />
      </p>

      <figure class='relative mt-10 inline-block max-w-full pl-10'>
        <span aria-hidden='true' class='absolute left-0 top-0 text-6xl/none font-serif text-sky-600'>"</span>
        <blockquote class='inline-block max-w-full rounded-xl border border-sky-200 bg-white px-6 py-5 text-xl/8 italic text-petrol-900 text-pretty whitespace-pre-line shadow-sm'>
          <p>{quote}</p>
        </blockquote>
        {quoteAuthor && (
          <figcaption class='mt-4 flex gap-x-4'>
            <div class='text-sm/6'>
              <Fragment set:html={quoteAuthor} />
            </div>
          </figcaption>
        )}
      </figure>
    </div>

    <div class='mt-16 max-w-2xl text-gray-600'>
      <h3
        class='text-3xl font-semibold tracking-tight text-pretty text-gray-900'>
        {bottomHeading}
      </h3>
      <ul role='list' class='mt-6 space-y-8'>
        {bottomItems.map((item, index) => (
          <li class='flex gap-x-3'>
            {index === 0 && <BadgeCheck aria-hidden='true' class='mt-1 size-5 flex-none text-sky-600' />}
            {index === 1 && <CalendarClock aria-hidden='true' class='mt-1 size-5 flex-none text-sky-600' />}
            {index === 2 && <Layers3 aria-hidden='true' class='mt-1 size-5 flex-none text-sky-600' />}
            {index === 3 && <Target aria-hidden='true' class='mt-1 size-5 flex-none text-sky-600' />}
            <p>
              <strong class='text-petrol-900'>{item.title}</strong> {item.description}
            </p>
          </li>
        ))}
      </ul>

      <div class='mt-10 flex'>
        <a
          href={ctaHref}
          target='_blank'
          rel='noopener noreferrer nofollow'
          class='rounded-md bg-sky-500 px-3.5 py-2.5 text-sm font-bold text-white shadow-sm hover:bg-sky-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-500'>
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</div>
