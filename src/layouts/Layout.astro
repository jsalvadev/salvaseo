                        "description": "Consultor SEO en Barcelona especializado en negocios locales. Trabajo solo con empresas de la zona para que tus clientes te encuentren en Google. Análisis inicial gratis.",
                        "url": "https://salvaseo.com/",
                        "telephone": "+34 692 051 399",
                        "email": "salvadorjesus.seo@gmail.com",
                        "priceRange": "€€",
                        "image": "https://salvaseo.com/logo.png",
                        "logo": "https://salvaseo.com/logo.png",
                        "areaServed": {
                            "@type": "City",
                            "name": "Barcelona",
                            "sameAs": "https://es.wikipedia.org/wiki/Barcelona"
                        },
                        "address": {
                            "@type": "PostalAddress",
                            "addressLocality": "Barcelona",
                            "addressRegion": "Cataluña",
                            "addressCountry": "ES"
                        },
                        "geo": {
                            "@type": "GeoCoordinates",
                            "latitude": 41.3874,
                            "longitude": 2.1686
                        },
                        "contactPoint": {
                            "@type": "ContactPoint",
                            "telephone": "+34 692 051 399",
                            "email": "salvadorjesus.seo@gmail.com",
                            "contactType": "customer service",
                            "availableLanguage": ["Spanish"]
                        },
                        "founder": {
                            "@type": "Person",
                            "@id": "https://salvaseo.com/#founder",
                            "name": "Salvador Jesús",
                            "jobTitle": "Consultor SEO Local",
                            "url": "https://salvaseo.com/",
                            "worksFor": {
                                "@id": "https://salvaseo.com/#business"
                            },
                            "email": "salvadorjesus.seo@gmail.com",
                            "telephone": "+34 692 051 399",
                            "image": "https://salvaseo.com/about-me.png",
                            "sameAs": ["https://www.instagram.com/salva_seo/"]
                        },
                        "hasOfferCatalog": {
                            "@type": "OfferCatalog",
                            "name": "Servicios de SEO Local",
                            "itemListElement": [
                                {
                                    "@type": "Offer",
                                    "itemOffered": {
                                        "@type": "Service",
                                        "name": "Gestión de Google Business Profile",
                                        "description": "Optimización completa de tu ficha de Google para que aparezca en búsquedas locales y Google Maps. Incluye configuración, contenido y estrategia de visibilidad."
                                    }
                                },
                                {
                                    "@type": "Offer",
                                    "itemOffered": {
                                        "@type": "Service",
                                        "name": "SEO Local en tu web",
                                        "description": "Trabajo de contenido y estructura web para mejorar el posicionamiento local. Optimización para conversiones y llamadas desde búsquedas locales."
                                    }
                                },
                                {
                                    "@type": "Offer",
                                    "itemOffered": {
                                        "@type": "Service",
